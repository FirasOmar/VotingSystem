@model IEnumerable<VotingSystem.Models.Position>

@{
    ViewData["Title"] = "Index";
}

<h1>Positions</h1>

<p>
    <a class="btn btn-secondary" asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.PositionName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.limit)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.PositionName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.limit)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.positionId">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.positionId">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.positionId">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
